<h1 class="mb-5 text-center">All restaurants</h1>

<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="card col-4 m-3" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name.capitalize %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= restaurant.category.capitalize %></h6>
          <p class="card-text"><%= restaurant.address %></p>
          <p class="card-text"><%= restaurant.phone_number %></p>
          <a href="<%= restaurant_path(restaurant) %>" class="btn btn-primary">See details</a>
        </div>
      </div>
    <% end%>
  </div>
</div>
