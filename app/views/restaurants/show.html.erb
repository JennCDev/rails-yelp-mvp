<h1 class="mb-4"><%= @restaurant.name %></h1>

<ul class="mb-5 p-0" style="list-style: none">
  <li><strong>Address : </strong><%= @restaurant.address %></li>
  <li><strong>Category : </strong><%= @restaurant.category %></li>
  <% if @restaurant.phone_number != "" %>
    <li><strong>Phone number : </strong><%= @restaurant.phone_number %></li>
  <% end %>
</ul>

<h2>Reviews</h2>
  <ul class="list-group mb-4">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %> - <%= review.rating %>/5</li>
    <% end %>
  </ul>
<br>

<h2>Add a new review</h2>

<%= render "reviews/form", restaurant: @restaurant, review: @review %>
